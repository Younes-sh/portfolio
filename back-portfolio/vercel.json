{
  "version": 2,
  "builds": [
    {
      "src": "index.js", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    {
      "src": "/api/.*", 
      "dest": "index.js" 
    },
    {
      "src": "/(.*)", 
      "dest": "index.js"
    }
  ],
  "env": {
    "MONGODB_URI": "MONGODB_URI_SECRET", 
    "NODE_ENV": "production" 
  }
  
}
